{
  "name": "bedrock-vue",
  "version": "1.2.1-0",
  "description": "Vue frontend framework running on Bedrock",
  "main": "index.js",
  "dependencies": {
    "bedrock-web": "^1.0.0",
    "vue": "^2.6.6",
    "vue-router": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/bedrock-vue"
  },
  "bedrock": {
    "browserDependencies": "all",
    "manifest": {
      "vue": {
        "browser": "dist/vue.runtime.min.js"
      },
      "vue-router": {
        "browser": "dist/vue-router.min.js"
      }
    },
    "webpack": {
      "vue": {
        "resolve": {
          "alias": {
            "vue$": "dist/vue.runtime.min.js"
          }
        }
      },
      "vue-router": {
        "resolve": {
          "alias": {
            "vue-router$": "dist/vue-router.min.js"
          }
        }
      }
    }
  }
}
